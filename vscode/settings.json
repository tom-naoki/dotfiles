{
  // editor
  "editor.renderLineHighlight": "all",
  "editor.cursorBlinking": "phase",
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "boundary",
  "editor.tabSize": 2,
  "editor.fontSize": 12,
  "editor.detectIndentation": true,
  "editor.minimap.enabled": false,
  "editor.wordWrap": "off", //折り返し表示
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": false,
  "editor.cursorStyle": "block",
  "editor.inlineSuggest.enabled": true,
  "editor.tokenColorCustomizations": {
    // comment のカラー変更
    "comments": "#6b8e23",
    "textMateRules": [
      {
        "scope": "heading.1.markdown entity.name.section.markdown",
        "settings": {
          "foreground": "#4d85c3"
        }
      },
      {
        "scope": "heading.2.markdown entity.name.section.markdown",
        "settings": {
          "foreground": "#389674"
        }
      },
      {
        "scope": "heading.3.markdown entity.name.section.markdown",
        "settings": {
          "foreground": "#b0be1e"
        }
      },
      {
        "scope": "heading.4.markdown entity.name.section.markdown",
        "settings": {
          "foreground": "#8594c8"
        }
      },
      {
        "scope": "heading.5.markdown entity.name.section.markdown",
        "settings": {
          "foreground": "#f76328"
        }
      },
      {
        "scope": "heading.6.markdown entity.name.section.markdown",
        "settings": {
          "foreground": "#fccf3e"
        }
      }
    ]
  },
  "editor.formatOnSave": true,
  "[json]": {
    "editor.formatOnSave": false
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // enter 押下時にsuggestionを実行する
  // "editor.acceptSuggestionOnEnter": "off",

  // prettier
  "prettier.jsxSingleQuote": true,
  // files
  "files.insertFinalNewline": true,
  "files.autoSave": "onFocusChange",

  // window
  "window.openWithoutArgumentsInNewWindow": "on",
  "window.restoreWindows": "none",
  "window.title": "${focusedView}${separator}${rootName}${separator}${activeEditorShort}",

  // breadcrumbs
  "breadcrumbs.enabled": true,

  // workbench
  "workbench.editor.tabCloseButton": "left",
  "workbench.editor.tabSizing": "fit",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorCustomizations": {
    // https://glitchbone.github.io/vscode-base16-term/#/default-dark
    "editor.selectionBackground": "#3a5f8f",        // 選択範囲の背景色（青系でわかりやすく）
    "editor.selectionHighlightBackground": "#add6ff26", // 同じ単語のハイライト
    "editor.inactiveSelectionBackground": "#3a3d4180",  // 非アクティブ時の選択範囲
    "terminal.background":"#151515",
    "terminal.foreground":"#D0D0D0",
    "terminalCursor.background":"#D0D0D0",
    "terminalCursor.foreground":"#D0D0D0",
    "terminal.ansiBlack":"#151515",
    "terminal.ansiBlue":"#6A9FB5",
    "terminal.ansiBrightBlack": "#505050",
    "terminal.ansiBrightBlue":"#6A9FB5",
    "terminal.ansiBrightCyan":"#75B5AA",
    "terminal.ansiBrightGreen":"#90A959",
    "terminal.ansiBrightMagenta":"#AA759F",
    "terminal.ansiBrightRed":"#AC4142",
    "terminal.ansiBrightWhite":"#F5F5F5",
    "terminal.ansiBrightYellow":"#F4BF75",
    "terminal.ansiCyan":"#75B5AA",
    "terminal.ansiGreen":"#90A959",
    "terminal.ansiMagenta":"#AA759F",
    "terminal.ansiRed":"#AC4142",
    "terminal.ansiWhite":"#D0D0D0",
    "terminal.ansiYellow":"#F4BF75"
},
  "workbench.iconTheme": "vscode-icons",
  "workbench.editor.wrapTabs": true,

  // debug
  "debug.internalConsoleOptions": "openOnSessionStart",

  // css
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,

  // terminal
  "terminal.integrated.fontFamily": "Noto Mono for Powerline",
  "terminal.external.osxExec": "iTerm2.app",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.scrollback": 1000000,

  "diffEditor.wordWrap": "off",
  "editor.guides.indentation": false,
  "cSpell.enabledLanguageIds": [
    "ruby",
    "markdown",
    "plaintext",
    "javascript",
    "typescript",
    "json",
    "go"
  ],
  "cSpell.ignoreRegExpList": ["[亜-熙ぁ-んァ-ヶ]"],

  // Go
  "go.useLanguageServer": true,
  "go.toolsManagement.autoUpdate": true,
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true
  },
  "go.testEnvVars": {
    "ENV": "test"
  },

  // terminal
  "terminal.integrated.tabs.location": "left",
  "terminal.integrated.tabs.description": "",
  "terminal.integrated.customGlyphs": false,
  "terminal.integrated.tabs.hideCondition": "never",
  "terminal.integrated.tabs.showActiveTerminal": "always",
  "terminal.integrated.tabs.title": "${sequence}",
  "files.associations": {
    "*.jb": "ruby"
  },

  // Python
  "[python]": {
    "editor.formatOnType": true
  },

  // Other
  "redhat.telemetry.enabled": true,
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "terminal.integrated.confirmOnExit": "always",
  "terminal.integrated.confirmOnKill": "always",
  "prettier.bracketSameLine": true,

  "search.useGlobalIgnoreFiles": true,
  "search.experimental.notebookSearch": true,
  "eslint.codeActionsOnSave.rules": null,
  "window.openFoldersInNewWindow": "on",
  "workbench.editor.tabActionLocation": "left",
  "window.titleSeparator": " - ",
  "workbench.editor.enablePreview": false,
  "github.copilot.chat.localeOverride": "ja",
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "window.zoomLevel": 2,
  "git.openRepositoryInParentFolders": "never",
  "markdown-preview-github-styles.colorTheme": "light",
  "workbench.colorTheme": "Tokyo Night Storm",
  "workbench.preferredHighContrastLightColorTheme": "Default Dark Modern",
  "githubPullRequests.pullBranch": "never",
  "security.promptForLocalFileProtocolHandling": false,
  "markdown.preview.breaks": true,
  "workbench.activityBar.location": "bottom",
  "editor.experimentalEditContextEnabled": true,
  "github.copilot.chat.reviewSelection.enabled": false,
  "rubyLsp.rubyVersionManager": {
    "identifier": "rbenv"
  },
  "rubyLsp.enabledFeatures": {
    "codeActions": true,
    "diagnostics": true,
    "documentHighlights": true,
    "documentLink": true,
    "documentSymbols": true,
    "foldingRanges": true,
    "formatting": true,
    "hover": true,
    "inlayHint": true,
    "onTypeFormatting": true,
    "selectionRanges": true,
    "semanticHighlighting": true,
    "completion": true,
    "codeLens": true,
    "definition": true,
    "workspaceSymbol": true,
    "signatureHelp": true,
    "typeHierarchy": true
  },
  "editor.accessibilitySupport": "off",
  "makefile.configureOnOpen": false,
  "remote.autoForwardPortsSource": "hybrid",
  "settingsSync.keybindingsPerPlatform": false,
  "settingsSync.ignoredExtensions": [],
  "settingsSync.ignoredSettings": [],
  "github.copilot.nextEditSuggestions.enabled": true
}
