# cd
alias ..="cd ../"
alias ....="cd ../../"
alias ......="cd ../../../"
alias home="cd ~/"
alias desktop="cd ~/Desktop"
alias workspace="cd ~/Desktop/workspace"
alias other="cd ~/Desktop/other"

# git
alias g="git"
alias gd="git diff"
alias gs="git status"
alias gco="git checkout"
alias g-createpr="git create-pr"
alias g-root='cd "$(git rev-parse --show-toplevel)"'
alias g-reset-stash='f(){ msg=$(git log -1 --pretty=%s); git reset --soft HEAD~ && git stash push -m "$msg"; }; f'
alias g-rebase='git rebase -i $(git log --oneline --decorate | peco --prompt "REBASE TARGET >" | head -n 1 | awk "{print \$1}")^'

# tig
alias t="tig"
alias ti="tig"

# rails
alias rrn="rails runner"

# bundler
alias be="bundle exec"

# rc
alias vimrc="vim ~/.vimrc"
alias zshrc="vim ~/.zshrc"
alias aliasrc="vim ~/.aliasrc"

# rm
alias rm="rm -i"

# open app
alias chrome="open -a /Applications/Google\ Chrome.app"

# other
alias findp="find . | peco"
alias diff="diff --color -u"

# difit
alias difit="npx difit"
alias difit-l="npx difit ."
alias difit-log="npx difit \$(git log --oneline --decorate | peco --prompt 'COMMIT >' | head -n 1 | awk '{print \$1}')"
alias difit-a="npx difit HEAD \$(git log --oneline --decorate | peco --prompt 'COMMIT >' | head -n 1 | awk '{print \$1}')"
# .aliasrc.local
source ~/.aliasrc.local
